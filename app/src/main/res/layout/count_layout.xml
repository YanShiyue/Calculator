<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/bt_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="计算"
            android:textSize="15sp"
            android:textColor="#F3216A"
            style="?android:attr/borderlessButtonStyle"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/bt_conversion"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="换算"
            android:textSize="15sp"
            android:textColor="#050505"
            style="?android:attr/borderlessButtonStyle"
            android:textStyle="bold"/>
    </LinearLayout>
    <EditText
        android:id="@+id/op_View"
        android:gravity="bottom|right"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textSize="50dp"
        android:hint="0"
        android:layout_width="match_parent"
        android:layout_weight="4"
        android:layout_height="0dp"
        android:textColor="#050505"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_height="0dp">
        <Button
            android:id="@+id/bt_pow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="^"
            android:textSize="20sp"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:id="@+id/bt_lg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="lg"
            android:textSize="20sp"
            style="?android:attr/borderlessButtonStyle"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/bt_ln"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="ln"
            android:textSize="20sp"
            style="?android:attr/borderlessButtonStyle"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/bt_lb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="("
            android:textSize="20sp"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:id="@+id/bt_rb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=")"
            android:textSize="20sp"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_height="0dp">
        <Button
            android:id="@+id/bt_sin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="sin"
            android:textSize="20sp"
            android:textAllCaps="false"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:id="@+id/bt_AC"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="AC"
            android:textSize="25sp"
            android:textColor="#F3216A"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:id="@+id/bt_CE"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="CE"
            android:textSize="25sp"
            android:textColor="#F3216A"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:id="@+id/bt_mod"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="%"
            android:textSize="25sp"
            android:textColor="#F3216A"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:id="@+id/bt_div"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="/"
            android:textSize="25sp"
            android:textColor="#F3216A"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_height="0dp">
        <Button
            android:id="@+id/bt_cos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="cos"
            android:textSize="20sp"
            style="?android:attr/borderlessButtonStyle"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/bt_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:textSize="25sp"
            android:textColor="#050505"
            style="?android:attr/borderlessButtonStyle"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/bt_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:textSize="25sp"
            android:textColor="#050505"
            style="?android:attr/borderlessButtonStyle"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/bt_9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:textSize="25sp"
            android:textColor="#050505"
            style="?android:attr/borderlessButtonStyle"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/bt_mul"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="*"
            android:textSize="30sp"
            android:textColor="#F3216A"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_height="0dp">
        <Button
            android:id="@+id/bt_tan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="tan"
            android:textSize="20sp"
            style="?android:attr/borderlessButtonStyle"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/bt_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textSize="25sp"
            android:textColor="#050505"
            style="?android:attr/borderlessButtonStyle"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/bt_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textSize="25sp"
            android:textColor="#050505"
            style="?android:attr/borderlessButtonStyle"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/bt_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textSize="25sp"
            android:textColor="#050505"
            style="?android:attr/borderlessButtonStyle"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/bt_sub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:textSize="30sp"
            android:textColor="#F3216A"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_height="0dp">
        <Button
            android:id="@+id/bt_PI"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="PI"
            android:textSize="20sp"
            style="?android:attr/borderlessButtonStyle"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/bt_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textSize="25sp"
            android:textColor="#050505"
            style="?android:attr/borderlessButtonStyle"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/bt_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textSize="25sp"
            android:textColor="#050505"
            style="?android:attr/borderlessButtonStyle"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/bt_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textSize="25sp"
            android:textColor="#050505"
            style="?android:attr/borderlessButtonStyle"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/bt_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:textSize="30sp"
            android:textColor="#F3216A"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_height="0dp">
        <Button
            android:id="@+id/bt_more"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="..."
            android:textSize="20sp"
            android:textColor="#F3216A"
            style="?android:attr/borderlessButtonStyle"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/bt_point"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."
            android:textSize="25sp"
            style="?android:attr/borderlessButtonStyle"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/bt_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:textSize="25sp"
            android:textColor="#050505"
            style="?android:attr/borderlessButtonStyle"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/bt_eq"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="="
            android:textSize="30sp"
            android:textColor="#F3216A"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>
</LinearLayout>
