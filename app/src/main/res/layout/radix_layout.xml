<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:text="进制换算"
        android:gravity="center"
        android:textColor="#050505"
        style="?android:attr/borderlessButtonStyle"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/f_radix"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:entries="@array/radix" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">
            <EditText
                android:id="@+id/f_op1"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="right|bottom"
                android:textSize="30dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="0"
                android:textStyle="bold"
                android:textColor="#050505"/>
            <TextView
                android:id="@+id/f_op2"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="right|top"
                android:text="B"
                android:textSize="30dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/t_radix"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent"
            android:entries="@array/radix"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">
            <EditText
                android:id="@+id/t_op1"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="right|bottom"
                android:textSize="30dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="0"
                android:textStyle="bold"
                android:textColor="#050505"/>
            <TextView
                android:id="@+id/t_op2"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="right|top"
                android:text="B"
                android:textSize="30dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/bt_0"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="0"
                android:textColor="#050505"
                style="?android:attr/borderlessButtonStyle"
                android:textStyle="bold"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/bt_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="3"
                android:textColor="#050505"
                style="?android:attr/borderlessButtonStyle"
                android:textStyle="bold"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/bt_6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="6"
                android:textColor="#050505"
                style="?android:attr/borderlessButtonStyle"
                android:textStyle="bold"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/bt_9"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="9"
                android:textColor="#050505"
                style="?android:attr/borderlessButtonStyle"
                android:textStyle="bold"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/bt_C"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="C"
                android:textColor="#050505"
                style="?android:attr/borderlessButtonStyle"
                android:textStyle="bold"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/bt_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="1"
                android:textColor="#050505"
                style="?android:attr/borderlessButtonStyle"
                android:textStyle="bold"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/bt_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="4"
                android:textColor="#050505"
                style="?android:attr/borderlessButtonStyle"
                android:textStyle="bold"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/bt_7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="7"
                android:textColor="#050505"
                style="?android:attr/borderlessButtonStyle"
                android:textStyle="bold"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/bt_A"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="A"
                android:textColor="#050505"
                style="?android:attr/borderlessButtonStyle"
                android:textStyle="bold"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/bt_D"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="D"
                android:textColor="#050505"
                style="?android:attr/borderlessButtonStyle"
                android:textStyle="bold"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/bt_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="2"
                android:textColor="#050505"
                style="?android:attr/borderlessButtonStyle"
                android:textStyle="bold"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/bt_5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="5"
                android:textColor="#050505"
                style="?android:attr/borderlessButtonStyle"
                android:textStyle="bold"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/bt_8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="8"
                android:textColor="#050505"
                style="?android:attr/borderlessButtonStyle"
                android:textStyle="bold"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/bt_B"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="B"
                android:textColor="#050505"
                style="?android:attr/borderlessButtonStyle"
                android:textStyle="bold"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/bt_E"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="E"
                android:textColor="#050505"
                style="?android:attr/borderlessButtonStyle"
                android:textStyle="bold"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/bt_AC"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="AC"
                style="?android:attr/borderlessButtonStyle"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#F3216A"/>
            <Button
                android:id="@+id/bt_CE"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="CE"
                style="?android:attr/borderlessButtonStyle"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#F3216A"/>
            <Button
                android:id="@+id/bt_F"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:text="F"
                android:textColor="#050505"
                style="?android:attr/borderlessButtonStyle"
                android:textStyle="bold"
                android:textSize="20dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>